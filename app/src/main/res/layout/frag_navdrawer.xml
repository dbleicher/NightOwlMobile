<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wguPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/owl5" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:textColor="@color/wguWhite"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvStudentID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:textColor="@color/wguWhite"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ListView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navListView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/wguWhite"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="@color/wguAccentLightTrans"
        tools:context=".NavigationDrawerFragment" />

</LinearLayout>