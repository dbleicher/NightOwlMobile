<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wguLightGrey"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMentorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wguPrimary"
        android:textColor="@color/wguWhite"
        android:padding="4dp"
        android:gravity="center_horizontal"
        android:text="Jane Alexander"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/llMentorEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.joanzapata.iconify.widget.IconButton
            android:id="@+id/btSendEmail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/iconview_selector"
            android:shadowColor="#40000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="{fa-envelope}"
            android:textColor="@color/wguPrimary"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tvEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="jane.alexander@wgu.edu" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMentorPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.joanzapata.iconify.widget.IconButton
            android:id="@+id/btDialPhone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/iconview_selector"
            android:shadowColor="#40000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="{fa-phone-square}"
            android:textColor="@color/wguPrimary"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="(800) 555-1212 x1234" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMentorOffice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvOHTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Office Hours:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOfficeHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="MON 9:00am to 3:30pm\nTUE 6:00pm to 11:00pm" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMentorBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Mentor:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="Merry Jo is from Live Oak, Florida and has lived in Virginia, South Carolina, West Virginia and now resides in Indiana. She started her career as an Analyst in the United States Air Force where she served 8 years of active duty military service. Her business experience includes Senior Management in Operations, Quality, Human Resources and Health \u0026 Safety. Her education includes a B.S in Management of Aviation from Embry-Riddle Aeronautical, a M.S in Management from Troy State, and a DBA from Argosy-Chicago. Merry Jo taught quantitative analysis as an adjunct professor during her career and has now embraced her passion for assisting students by becoming a full time mentor at WGU." />
    </LinearLayout>

</LinearLayout>