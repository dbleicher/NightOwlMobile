<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvNavCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <!-- Left Block -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/itvResources"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iconview_selector"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingTop="4dp"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:text="{fa-cubes}"
                android:textColor="@color/wguPrimary"
                android:textSize="@dimen/card_icon_bt_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="Resources"
                android:textColor="@color/wguPrimary"
                android:textSize="@dimen/card_text_small" />

        </LinearLayout>

        <!-- Middle Block -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/itvVideos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iconview_selector"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingTop="4dp"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:text="{fa-film}"
                android:textColor="@color/wguPrimary"
                android:textSize="@dimen/card_icon_bt_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="Videos"
                android:textColor="@color/wguPrimary"
                android:textSize="@dimen/card_text_small" />

        </LinearLayout>

        <!-- Right Block -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/itvSocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iconview_selector"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingTop="4dp"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:text="{fa-share-alt}"
                android:textColor="@color/wguPrimary"
                android:textSize="@dimen/card_icon_bt_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="Social"
                android:textColor="@color/wguPrimary"
                android:textSize="@dimen/card_text_small" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
