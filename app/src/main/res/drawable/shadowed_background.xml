<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#00000000"
                android:gradientRadius="220"
                android:centerX="1"
                android:centerY="1"
                android:startColor="#70000000"
                android:type="radial"></gradient>
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="0dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/wguWhite" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>